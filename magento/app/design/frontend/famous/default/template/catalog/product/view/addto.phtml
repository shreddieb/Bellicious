<?php $config2 = Mage::getStoreConfig('mdloption/genral_theme_setting'); ?>
<?php $_product = $this->getProduct(); ?>
<?php $_wishlistSubmitUrl = $this->helper('wishlist')->getAddUrl($_product); ?>

<ul class="proLinks">
<?php if ($this->helper('wishlist')->isAllow()) : ?>
    <li><a class="quickLinks" title="<?php echo $this->__('Add to Wishlist') ?>" href="<?php echo $_wishlistSubmitUrl ?>" onclick="productAddToCartForm.submitLight(this, this.href); return false;">
    	<i class="fa fa-heart"></i> 
        <span><?php echo $this->__('Add to Wishlist') ?></a></span>
    </li>
<?php endif; ?>

<?php if ($config2['compare_box']) :?>
	<?php $_compareUrl = $this->helper('catalog/product_compare')->getAddUrl($_product);?>
	<?php if($_compareUrl) : ?>
		<li>
			<!--Comapare-->
			<?php if($_compareUrl=$this->getAddToCompareUrl($_product)): ?>
			<a  class="quickLinks" title="<?php echo $this->__('Add To Compare')?>" href="javascript:void(0);" onclick="setLocation('<?php echo $_compareUrl?>','<?php echo $_product->getId()?>'); return false;" > 
			<i class="fa fa-signal"></i> 
			<span><?php echo $this->__('Add To Compare')?></span>
			</a>
			<?php endif; ?>
			<!--End comapare-->
	</li>
	<?php endif; ?>
<?php endif; ?>
</ul>
