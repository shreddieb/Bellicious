<?php if ($_products = $this->getRecentlyViewedProducts()): ?>
<div class="sideVied">
        <div id="recently-viewed-items" class="recentlyItem">
		<h2><a id="sideViedBtn" href="javascript:void(0)"><?php echo $this->__('Recently Viewed');?></a></h2>
		<div class="recentBox">
        <?php foreach ($_products as $_item): ?>
            <div class="recentItem">
             <a href="<?php echo $_item->getProductUrl() ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(100,100); ?>" alt="<?php echo $this->stripTags($this->getImageLabel($_item, 'small_image'), null, true) ?>" />
			 </a>
			  <?php echo $this->getPriceHtml($_item, true, '-viewed') ?>
			
                
            </div>
        <?php endforeach; ?>
        </div>
        <script type="text/javascript">decorateList('recently-viewed-items');</script>
	</div>
</div>	
<?php endif; ?>

<script type="text/javascript">
(function($) {
    $(function() {
			//slide box
			
			$('#sideViedBtn').click(function(){
				if($('.sideVied').hasClass('slideRight')){
					$('.sideVied').removeClass('slideRight');
				}else{
					$('.sideVied').addClass('slideRight');
				}
			})		
			
		    $('.recentBox').bxSlider({
				mode: 'vertical',
				slideWidth:300,
				minSlides:3,
				maxSlides:3,
				pager:false,
				slideMargin: 10,
				infiniteLoop:false
			});
       
    });
})(jQuery);	
</script>
