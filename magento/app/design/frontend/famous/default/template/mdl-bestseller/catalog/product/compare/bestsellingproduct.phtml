<?php 
$_helper = $this->helper('catalog/product_compare');
$_items = $_helper->getItemCount() > 0 ? $_helper->getItemCollection() : null;
?>
<div class="header-compare">
    <h2 class="classy">
        <span class="f-left cart-icon"><i class="fa fa-signal"></i></span>
        <?php if($_helper->getItemCount() > 0): ?> 
            <a href="#"><?php echo $this->__('compare %d', $_helper->getItemCount()) ?></a>
        <?php else:?>
            <a href="#"><?php echo $this->__('compare') ?> 0</a>
        <?php endif; ?>
    </h2>
    <div class="compare-content">
    <?php if($_helper->getItemCount() > 0): ?>
        <ol id="compare-items">
        <?php foreach($_items as $_index => $_item): ?>
            <li class="item">
                <input type="hidden" class="compare-item-id" value="<?php echo $_item->getId() ?>" />
                <p class="product-name"><a href="<?php echo $this->getProductUrl($_item) ?>"><?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName(), 'name') ?></a></p>
                                <a class="comp-rem" id="<?php echo $_helper->getRemoveUrl($_item) ?>" href="javascript:void(0)"  title="<?php echo $this->__('Remove This Item') ?>" class="btn-remove" ><?php echo $this->__('Remove This Item') ?></a>
            </li>
        <?php endforeach; ?>
        </ol>
        <script type="text/javascript">decorateList('compare-items')</script>
        <div class="actions">
            <button type="button" class="comp-list button"><span><span><?php echo $this->__('Clear All') ?></span></span></button>
            <button type="button" title="<?php echo $this->__('Compare') ?>" class="button" onclick="popWin('<?php echo $_helper->getListUrl() ?>','compare','top:0,left:0,width=820,height=600,resizable=yes,scrollbars=yes')"><span><span><?php echo $this->__('Compare') ?></span></span></button>
        </div>
    <?php else: ?>
        <div class="actions"><p class="empty"><?php echo $this->__('You have no items to compare.') ?></p></div>
    <?php endif; ?>
    </div>
</div>

