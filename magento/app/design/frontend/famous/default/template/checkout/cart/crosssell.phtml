<?php
/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>
<?php if($this->getItemCount()): ?>
<div class="cartSell">
<div class="block-title">
    <h2><span><?php echo $this->__('You might also interested') ?></span></h2>
</div>
<div id="mix_container" class="mix_container">
  <div class="mix_wrapper">
  <div class="mix_inner">
    <ul id="crosssell-products-list"  class="products-grid">
    <?php foreach ($this->getItems() as $_item): ?>
        <li class="item col-md-3 col-xs-6">
            <div class="itemInner">
            	<div class="proImage">
					<a class="product-image" href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_item->getName()) ?>">
    	            	<img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(250,300); ?>" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" />
					</a>
             </div>
          </div>          
               <div class="bottomProDetail"> 
					<h2 class="product-name">
    	               	<a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->htmlEscape($_item->getName()) ?></a>
	                </h2>
					<?php echo $this->getPriceHtml($_item, true) ?>
                    <div class="proAction">
                    	 <button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="add-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')">
                         	<span>
                            	<span>
									<i class="fa fa-shopping-cart"></i> <?php echo $this->__('Add to Cart');?>
                                </span>
                            </span>
                         </button>
                         
                         	<?php if ($this->helper('wishlist')->isAllow()) : ?>
                        <a href="<?php echo $this->getAddToWishlistUrl($_item) ?>"  title="<?php echo $this->__('Add to Wishlist') ?>" rel="tooltip" data-placement="top" class="w-btn"><i class="fa fa-heart"></i></a>
                    <?php endif; ?>
                    <?php if($_compareUrl=$this->getAddToCompareUrl($_item)): ?>
                        <a href="<?php echo $_compareUrl ?>" class="w-btn" title="<?php echo $this->__('Add to Compare') ?>" rel="tooltip" data-placement="top" >
                            	<i class="fa fa-exchange"></i>
                            </a>
                    <?php endif; ?>
                    
                    </div>
                    </div>
            </li>
    <?php endforeach; ?>
    </ul>
    </div>
    </div>
    </div>
</div>
<?php endif; ?>