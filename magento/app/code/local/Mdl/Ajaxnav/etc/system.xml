<?xml version="1.0"?>
<config>
	<sections>
        <ajaxnav translate="label">
			<tab>Mdlext</tab>
            <label>Mdl Layered Navigation</label>
            <frontend_type>text</frontend_type>
            <sort_order>140</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <ajaxnav translate="label comment" module="ajaxnav">
                    <label>Layered Navigation</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>800</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<enabled translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled> 
                        <price_style translate="label">
                            <label>Price Filter</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ajaxnav/system_config_source_price</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </price_style>
                       <show_swatches translate="label">
                            <label>Show Icons for Colors ?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ajaxnav/system_config_source_swatches</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_swatches>
						<show_states translate="label">
                            <label>Position to display States</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ajaxnav/system_config_source_states</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_states>
						<reset_filters translate="label">
                            <label>Reset Filters while Click on Another Category</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </reset_filters>   
                    </fields>
                </ajaxnav>
            </groups>
        </ajaxnav>
  	</sections>
</config>