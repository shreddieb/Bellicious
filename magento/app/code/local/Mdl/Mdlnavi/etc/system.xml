<?xml version="1.0"?>
<config>
	<sections>
		<mdlmdlnavi translate="label" module="mdlmdlnavi">
			<label>Mdl Navigation</label>
			<tab>Mdlext</tab>
			<frontend_type>text</frontend_type>
			<sort_order>130</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<general translate="label">
					<label>General</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<status translate="label comment">
							<label>Enable Mdlnavi</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</status>
						<mdltreestructure_enable translate="label comment">
							<label>Rewrite Category Tree</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>15</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</mdltreestructure_enable>
					</fields>
				</general>
				<navsettings translate="label">
					<label>Navigation setting</label>
					<frontend_type>text</frontend_type>
					<sort_order>30</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<navoption_home translate="label">
                            <label>Home link type:</label>
                            <comment>Here you can select home link type or enable or disable</comment>
							<frontend_type>select</frontend_type>
							<source_model>mdlmdlnavi/config_navigationhome</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                        </navoption_home>
						<navoption_main translate="label">
                            <label>Menu Position:</label>
                            <comment>Set Navigation on left</comment>
							<frontend_type>select</frontend_type>
							<source_model>mdlmdlnavi/config_mainnav</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                        </navoption_main>
						<nav-fix translate="label">
                            <label>Navigation Fix: </label>
                            <comment>Here you can fix navigation on scroll.</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends>
                                <navoption_main>1</navoption_main>
                            </depends>
                        </nav-fix>
						<navleftposhome translate="label">
                            <label>Left Navigation Home Page: </label>
                            <comment>Here you can enable or disable left navigation.</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                        </navleftposhome>
						<navrighttposhome translate="label">
                            <label>Right Navigation Home Page: </label>
                            <comment>Here you can enable or disable right navigation.</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                        </navrighttposhome>
						<navleftposhomecat translate="label">
                            <label>Left Navigation Category Page: </label>
                            <comment>Here you can enable or disable left navigation from category page.</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                        </navleftposhomecat>
						<navrightposhomecat translate="label">
                            <label>Right Navigation Category Page: </label>
                            <comment>Here you can enable or disable right navigation from category page.</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                        </navrightposhomecat>
					</fields>
				</navsettings>
			</groups>
		</mdlmdlnavi>
	</sections>
</config>