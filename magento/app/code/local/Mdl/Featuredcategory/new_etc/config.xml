<config>    
    <modules>
        <Mdl_Featuredcategory>
            <version>0.1.0</version>
        </Mdl_Featuredcategory>
    </modules>
	 <global>
        <blocks>
		    <featuredcategory>
			    <class>Mdl_Featuredcategory_Block</class>
			</featuredcategory>
		</blocks>
		<helpers>
            <featuredcategory>
                <class>Mdl_Featuredcategory_Helper</class>
            </featuredcategory>
        </helpers>  
		<models>
            <featuredcategory>
		        <class>Mdl_Featuredcategory_Model</class>
			    <resourceModel>featuredcategory_resource</resourceModel>
		    </featuredcategory>
			<featuredcategory_resource>
                <class>Mdl_Featuredcategory_Model_Resource</class>
			     <entities>
				     <featured>
				         <table>mdl_featured_category</table>
				     </featured>
			     </entities>
		    </featuredcategory_resource> 
	    </models>
		<resources>
            <featuredcategory_setup>
                <setup>
                    <module>Mdl_Featuredcategory</module>
                    <class>Mdl_Featuredcategory_Model_Resource_Setup</class>
                </setup>
            </featuredcategory_setup>
        </resources>		
     </global>
	 <admin>
        <routers>
            <featuredcategory>
                <use>admin</use>
                <args>
                    <module>Mdl_Featuredcategory</module>
                    <frontName>adminfeaturedcategory</frontName>
                </args>
            </featuredcategory>
        </routers>
   </admin>
   <adminhtml>
       <layout>
          <updates>
              <featuredcategory>
                  <file>featuredcategory/featuredcategory.xml</file>
              </featuredcategory>
          </updates>
       </layout>
       <menu>
           <featuredcategory translate="title" module="featuredcategory">
               <title>Fetured Category </title>
               <sort_order>110</sort_order>
               <children>
                   <set_time>
                       <title>Manage Categories</title>
                       <action>adminfeaturedcategory/adminhtml_index</action>
                   </set_time>
				   <settings translate="title" module="featuredcategory">
                       <title>Settings</title>
                       <action>adminhtml/system_config/edit/section/featuredcategory</action>
					     <sort_order>40</sort_order>
                  </settings>
               </children>
           </featuredcategory>
       </menu>
	    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                  
                    <system>
                        <children>
                            <config>
                                <children>
                                    <featuredcategory>
                                        <title>MDL featuredcategory Section</title>
                                    </featuredcategory>
									<about_featuredcategory>
                                        <title>MDL featuredcategory Section</title>
                                    </about_featuredcategory>
					            </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
</adminhtml>
    <frontend>
         <routers>
             <featuredcategory>
                 <use>standard</use>
                 <args>
                      <module>Mdl_Featuredcategory</module>
                      <frontName>featuredcategory</frontName>
                 </args>
            </featuredcategory>
        </routers>
		 <layout>
            <updates>
                <featuredcategory>
                    <file>featuredcategory.xml</file>
                </featuredcategory>
            </updates>
        </layout>
     </frontend>
	 
</config>